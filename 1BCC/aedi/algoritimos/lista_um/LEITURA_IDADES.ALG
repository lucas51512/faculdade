LEITURA_IDADES 

VAR 
	NUM, Q_PSS, IDADE, SOMA, IDADE30 :inteiro;
	MEDIA: real;
	
INICIO
	NUM <- 0;
	SOMA <- 0;
	IDADE30 <- 0;
	LEIA(Q_PSS);
	ENQUANTO(NUM > Q_PSS) FAÇA {
		LEIA (IDADE);
		SOMA <- SOMA + IDADE;
		SE(IDADE > 30)
			ENTÃO IDADE30 <- IDADE30 + 1;
		NUM + 1;
	}
	
	MEDIA <- SOMA / NUM;
	
	IMPRIMA("A MÉDIA DE IDADES É " MEDIA);
	IMPRIMA("A QUANTIDADE DE PESSOAS MAIOR DE 30 ANOS É " IDADE30);

FIM.